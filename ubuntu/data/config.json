{
  "users": {
    "admin": {
      "username": "admin",
      "password": "admin",
      "sudo": true,
      "desktop": [
        "org.gnome.Terminal.desktop",
        "org.gnome.Settings.desktop",
        "firefox.desktop",
        "org.gnome.gedit.desktop",
        "myWorkspace.desktop",
        "org.gnome.Nautilus.desktop",
        "shutdown.desktop",
        "reboot.desktop"
      ]
    },
    "user": {
      "username": "user",
      "password": "",
      "sudo": false,
      "desktop": [
        "org.gnome.Settings.desktop",
        "myWorkspace.desktop",
        "shutdown.desktop",
        "reboot.desktop"
      ]
    }
  },
  "files_to_copy": {
    "drk-logo": {
      "source": "/logos/drk-logo.png",
      "destination": "/usr/share/drk/drk-logo.png"
    },
    "x11-vty-switch": {
      "source": "/01-vt-switch.conf",
      "destination": "/etc/X11/xorg.conf.d/01-vt-switch.conf"
    },
    "workspace-autostart": {
      "source": "/myWorkspaceAutostart.desktop",
      "destination": "/etc/xdg/autostart/myWorkspaceAutostart.desktop"
    },
    "gdm-conf": {
      "source": "/gdm.conf",
      "destination": "/etc/gdm3/custom.conf"
    },
    "grub-conf": {
      "source": "/grub",
      "destination": "/etc/default/grub"
    },
    "firefox-policies": {
      "source": "/firefox/policies.json",
      "destination": "/etc/firefox/policies/policies.json"
    },
    "post-install": {
      "source": "/post-install.sh",
      "destination": "/home/admin/post-install.sh"
    },
    "wifi": {
      "source": "/DRK_SAK_Intern_Mobile.psk",
      "destination": "/var/lib/iwd/DRK_SAK_Intern_Mobile.psk"
    }
  },
  "dirs_to_copy": {
    "dconf": {
      "source": "/dconf/",
      "destination": "/etc/dconf/"
    },
    "AccountsService": {
      "source": "/AccountsService/",
      "destination": "/var/lib/AccountsService/"
    },
    "systemd-drop-ins": {
      "source": "/systemd/",
      "destination": "/usr/lib/systemd/logind.conf.d/"
    },
    "firefox": {
      "source": "/firefox/",
      "destination": "/etc/firefox/policies/"
    }
  },

  "apt_packages": ["displaylink-driver"]
}
